<AnchorPane fx:id="root" cache="true" prefHeight="980" prefWidth="980" stylesheets="@../css/MainMenu.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="townerdefense.control.MenuController">
    <children>
        <VBox alignment="CENTER" layoutX="306.0" layoutY="128.0" prefHeight="709.0" prefWidth="348.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button fx:id="continueButton" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#handleContinueButtonAction" prefHeight="72.0" prefWidth="195.0" text="Continue">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Button>
                <Button fx:id="newGameButton" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" prefHeight="72.0" prefWidth="195.0" text="Play new game">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Button>
                <Button fx:id="settingButton" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#handleSettingButtonAction" prefHeight="72.0" prefWidth="195.0" text="Setting" />
                <Button fx:id="aboutButton" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#handleAboutButtonAction" prefHeight="72.0" prefWidth="195.0" text="About" />
                <Button fx:id="exitButton" cancelButton="true" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleExitButtonAction" prefHeight="72.0" prefWidth="195.0" text="Exit" />
